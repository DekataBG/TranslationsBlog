@page
@model TranslationsBlog.Web.Pages.Menu.EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form class="mt-3" method="post">
    <div class="form-group">
        <label asp-for="@Model.Role.Id" ></label>
        <input asp-for="@Model.Role.Id" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Role.RoleName" ></label>
        <input asp-for="@Model.Role.RoleName" />
        <span asp-validation-for="@Model.Role.RoleName" class="text-danger"></span>   
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="/Menu/Roles" class="btn btn-secondary">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Role.Users.Any())
            {
                foreach (var user in Model.Role.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-page="/Menu/EditUserInRole" asp-route-roleId="@Model.Role.Id" class="btn btn-primary">Add or Remove Users</a>
        </div>
    </div>
</form>