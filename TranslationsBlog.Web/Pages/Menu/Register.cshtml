@page
@model TranslationsBlog.Web.Pages.Menu.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>User Registration</h1>
<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="@Model.UnregisteredUser.Username" placeholder="Username" />
            <span asp-validation-for="@Model.UnregisteredUser.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.UnregisteredUser.Email" placeholder="Email" />
            <span asp-validation-for="@Model.UnregisteredUser.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.UnregisteredUser.Password" placeholder="Password" />
            <span asp-validation-for="@Model.UnregisteredUser.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.UnregisteredUser.ConfirmPassword" placeholder="Confirm Password" />
            <span asp-validation-for="@Model.UnregisteredUser.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>