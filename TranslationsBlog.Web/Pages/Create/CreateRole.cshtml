@page
@model TranslationsBlog.Web.Pages.Create.CreateRoleModel
@{
    ViewData["Title"] = "Create Role";
}

<h1>Create Role</h1>
<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="@Model.Role.RoleName" placeholder="Role Name" class="form-control"/>
            <span asp-validation-for="@Model.Role.RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
</div>