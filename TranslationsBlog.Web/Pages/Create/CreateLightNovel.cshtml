@page
@model TranslationsBlog.Web.Pages.Create.CreateLightNovelModel
@{
    ViewData["Title"] = "Create Light Novels";
}


<h2 class="text-center mb-5">Create New Light Novel</h2>

<div class="container">
    <form method="post">
        <input hidden asp-for="@Model.LightNovel.Number" value="@Model.Count" />
        <input hidden asp-for="@Model.LightNovel.Volumes" />
        <div class="form-group">
            <input asp-for="@Model.LightNovel.Title" type="search" placeholder="Title" />
            <span asp-validation-for="@Model.LightNovel.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Create Light Novel</button>
            <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>