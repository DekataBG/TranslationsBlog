@page
@model TranslationsBlog.Web.Pages.Create.CreateTranslatorModel
@{
    ViewData["Title"] = "Create Translator";
}

<div class="container">
    <form method="post">
        <div class="form-group">
            <input asp-for="Translator.Username" placeholder="Username" />
            <span asp-validation-for="Translator.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Translator.Email" placeholder="Email" />
        </div>
        <div class="form-group">
            <textarea rows="10" cols="50" asp-for="Translator.Description" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Create Translator</button>
            <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}