@page
@model TranslationsBlog.Web.Pages.Create.CreateChapterModel
@{
    ViewData["Title"] = "Create Chapter";
}

<h3>Create Chapter</h3>
<div class="container">
    <form method="post">
        <div class="form-group">
            <select asp-for="@Model.Volume.Id">
                <option value="">Please select volume</option>
                @foreach (var volume in Model.Volumes)
                {
                    <option value="@volume.Id">Volume @volume.Number</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Create Chapter</button>
            <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>