@page
@model TranslationsBlog.Web.Pages.Delete.DeleteVolumeModel
@{
    ViewData["Title"] = "Delete Volume";
}

<h3>Delete Volume</h3>
<div class="container">
    <form method="post">
        <div class="form-group">
            <select asp-for="@Model.Volume.Id">
                <option value="">Please select volume</option>
                @foreach (var volume in Model.Volumes)
                {
                    <option value="@volume.Id">Volume @volume.Number</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit"
                    onclick="return confirm('Are you sure you want to delete this volume')">Delete Volume</button>
            <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>