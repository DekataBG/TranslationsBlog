@page
@model TranslationsBlog.Web.Pages.Delete.DeleteTranslatorModel
@{
    ViewData["Title"] = "Delete Translator";
}

<form method="post">
    <div class="form-group">
        <select asp-for="@Model.Translator.Id"
                asp-items="@(new SelectList(Model.Translators,"Id","Username"))">
            <option>Select Translator</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Delete Translator</button>
        <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
    </div>
</form>