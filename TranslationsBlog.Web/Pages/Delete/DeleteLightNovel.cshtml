@page
@model TranslationsBlog.Web.Pages.Delete.DeleteLightNovelModel
@{
    ViewData["Title"] = "Delete Light Novel";
}

<form method="post">
    <div class="form-group">
        <select asp-for="@Model.LightNovel.Id"
                asp-items="@(new SelectList(Model.LightNovels,"Id","Title"))">
            <option>Select Light Novel</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit"
                onclick="return confirm('Are you sure you want to delete this light novel')">Delete Light Novel</button>
        <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
    </div>
</form>