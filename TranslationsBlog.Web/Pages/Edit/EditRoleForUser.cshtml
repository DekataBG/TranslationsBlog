@page
@model TranslationsBlog.Web.Pages.Edit.EditRoleForUserModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container">
    <div class="row">
        <div class="col-6 text-center">
            <h2>Add Role</h2>
            <form method="post">
                <select asp-for="SelectedRole.RoleId">
                    <option value="value">Select Role</option>
                    @foreach (var role in Model.RoleHasNoUser)
                    {
                        <option value="@role.RoleId">@role.RoleName</option>
                    }
                </select>
                <input hidden asp-for="SelectedRole.UserId" value="@Model.UserId" />
                <div class="mt-3">
                    <button asp-route-command="add"
                            class="btn btn-success" type="submit">
                        Add Role
                    </button>
                </div>
            </form>
        </div>
        <div class="col-6 text-center">
            <h2>Remove Role</h2>
            <form method="post">
                <select asp-for="SelectedRole.RoleId">
                    <option value="value">Select Role</option>
                    @foreach (var role in Model.RoleHasUser)
                    {
                        <option value="@role.RoleId">@role.RoleName</option>
                    }
                </select>
                <input hidden asp-for="SelectedRole.UserId" value="@Model.UserId" />
                <div class="mt-3">
                    <button class="btn btn-danger" type="submit"
                            onclick="return confirm('Are you sure you want to remove this role')">
                        Remove Role
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-4"><a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a></div>
</div>