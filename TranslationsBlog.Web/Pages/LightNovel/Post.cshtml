@page "{lnId}/{volId}/{chId}/{pId}"
@inject SignInManager<IdentityUser> signInManager
@model TranslationsBlog.Web.Pages.LightNovel.PostModel
@{
    ViewData["Title"] = "Post";
}

@if (signInManager.IsSignedIn(User) && User.IsInRole("Staff"))
{
    <div class="container mb-5">
        <a asp-page="/LightNovel/EditPart" class="btn btn-secondary" asp-route-id="@Model.Part.Id">Edit</a>
        <a asp-page="/Delete/DeletePart" class="btn btn-danger" asp-route-id="@Model.Part.Id">Delete</a>
    </div>
}

<h3 class="text-center">@Model.LightNovel.Title Volume @Model.Volume.Number Chapter @Model.Chapter.Number Part @Model.Part.Number</h3>

<div class="container text-center">
    @Model.Part.Text
</div>